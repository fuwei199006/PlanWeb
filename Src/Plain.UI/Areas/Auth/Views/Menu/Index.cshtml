@model Framework.Contract.PagedList<Plain.Model.Models.Model.Basic_Menu>
@using Framework.Web.Controls.MvcPager
@using Plain.Web
@{
    ViewBag.Title = "菜单管理";

    Layout = Url.Content("~/Views/Shared/_Layout.cshtml");
}
<div class="box">
    <div class="box-header">
        <h3 class="box-title">菜单管理</h3>
        <div class="box-tools">
            <div class="input-group" style="width: 150px;">
                <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Search">
                <div class="input-group-btn">
                    <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                </div>
            </div>
        </div>
    </div><!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
            <tr>
                <th>序号</th>
                <th>菜单名称</th>
                <th>菜单链接</th>
                <th>菜单类型</th>
                <th>排序</th>
                <th>父级菜单</th>
                <th>创建时间</th>
                <th>是否可用</th>
                <th>操作</th>
            </tr>
            @foreach (var menu in Model)
            {
                <tr>
                    <td>1</td>
                    <td>@menu.MenuName</td>
                    <td>@menu.MenuUrl</td>
                    <td>@menu.MenuType</td>
                    <td>@menu.MenuSort</td>
                    <td>@menu.MenuParentId</td>
                    <td>@(menu.CreateTime.HasValue?menu.CreateTime.Value.ToString("yyyy-MM-dd"):"")</td>
                    <td>@(menu.MenuStatus?"是":"否")</td>
                    <td>编辑</td>
                </tr>
            }
          
         
        </table>
    </div><!-- /.box-body -->
</div><!-- /.box -->
<div class="box-footer clearfix">
    @Html.Pager(Model, new PagerOptions() { ShowTotalItemCount = true })
</div>