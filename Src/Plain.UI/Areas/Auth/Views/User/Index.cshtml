@using Framework.Web.Controls.MvcPager
@using Plain.Dto;
@model Framework.Contract.PagedList<Plain.Model.Models.Model.Basic_UserInfo>

@{
    ViewBag.Title = "人员管理";

    Layout = Url.Content("~/Views/Shared/_Layout.cshtml");
}

<div class="row-fluid">
    <div class="span4">
        <div>
            <a class="btn red" id="delete" href="javascript:;"><i class="icon-trash icon-white"></i> 删除</a>
            <a class="btn blue thickbox" title='添加新用户' href="@Url.Action("Create")?TB_iframe=true&height=350&width=500" ><i class="icon-plus icon-white"></i> 新增</a>
        </div>
    </div>
    <div class="span8">
        @using (Html.BeginForm(null, null, null, FormMethod.Get, new { id = "search" }))
        {
            <div class="dataTables_filter">
                <label>
                    <button type="submit" class="btn">搜索 <i class="icon-search"></i></button>
                </label>
                <label>
                    <span>用户名：</span>
                    @Html.TextBox("LoginName", null, new { @class = "m-wrap small" })
                </label>

            </div>
        }
    </div>
</div>
<div class="alert">
    <button class="close" data-dismiss="alert"></button>
    <strong>系统登录人员：</strong>
    列表中为当前系统已经注册的用户数
</div>


@using (Html.BeginForm("Delete", "User", FormMethod.Post, new { id = "mainForm" }))
{
    <table class="table table-striped table-hover ">
        <tr>
            <th style="width: 8px;">
                <input type="checkbox" id="checkall" class="group-checkable" />
            </th>
            <th>序号</th>
            <th>用户名</th>
            <th>昵称</th>
            <th>真实姓名</th>
            <th>性别</th>
            <th>年龄</th>
            <th>生日</th>
            <th>邮箱</th>
            <th>所属角色</th>
            <th>是否可用/激活</th>
            <th>详细信息</th>
            @*<th>手机号</th>
                <th>QQ</th>
                <th>微信</th>
                <th>地址</th>
                <th>其它信息</th>*@
            <th>创建时间</th>
            <th>操作</th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td><input type="checkbox" class="checkboxes" name='ids' value='@user.Id' /></td>
                <td>@user.Id</td>
                <td>@user.LoginName</td>
                <td>@user.NickName</td>
                <td>@user.RealName</td>
                <td>@(Framework.Utility.EnumHelper.GetEnumTitleByValue<SexType>(user.Sex))</td>
                <td>@(DateTime.Now.Year - user.BirthDay.Value.Year)</td>
                <td>@(user.BirthDay.HasValue ? user.BirthDay.Value.ToString("yyyy-MM-dd") : "")</td>
                <td>@user.UserEmail</td>、
                <td>1,2,3,4</td>
                <td>@(Framework.Utility.EnumHelper.GetEnumTitleByValue<UserStausType>(user.UserStaus.Value)) </td>
                <td>
                    <a class="btn mini primary thickbox" title='查看' href="@Url.Action("Edit", new { id = user.Id })?TB_iframe=true&height=450&width=600">
                        <i class="icon icon-list-alt"></i>
                        详细
                    </a>
                </td>
                @*<td>@user.MobilePhone</td>
                <td>@user.QQ</td>
                <td>@user.Weixin</td>
                <td>@user.Addr</td>
                <td>@user.OtherInfo</td>*@
                <td>@user.CreateTime</td>
                <td>
                    <a class="btn mini purple thickbox" title='编辑' href="@Url.Action("Edit", new { id = user.Id })?TB_iframe=true&height=450&width=600">
                        <i class="icon-edit"></i>
                        编辑
                    </a>
                </td>
            </tr>
        }


    </table>

}
<div class="dataTables_paginate paging_bootstrap pagination">
    @Html.Pager(Model, new PagerOptions() { AutoHide = true, ShowTotalItemCount = true })
</div>
