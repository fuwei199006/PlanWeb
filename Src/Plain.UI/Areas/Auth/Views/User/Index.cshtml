@using Framework.Web.Controls.MvcPager
@model Framework.Contract.PagedList<Plain.Model.Models.Model.Basic_UserInfo>

@{
    ViewBag.Title = "人员管理";

    Layout = Url.Content("~/Views/Shared/_Layout.cshtml");
}
@using (Html.BeginForm("Delete", null, FormMethod.Post, new { id = "mainForm" }))
{
    <table class="table table-striped table-hover ">
        <tr>
            <th style="width: 8px;">
                <input type="checkbox" id="checkall" class="group-checkable" />
            </th>
            <th>序号</th>
            <th>账号</th>
            <th>昵称</th> 
            <th>真实姓名</th>
            <th>性别</th>
            <th>年龄</th>
            <th>生日</th>
            <th>邮箱</th>
            <th>是否可用/激活</th>
            <th>手机号</th>
            <th>QQ</th>
            <th>微信</th>
            <th>地址</th>
            <th>其它信息</th>
            <th>创建时间</th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td><input type="checkbox" class="checkboxes" name='ids' value='@user.Id' /></td>
                <td>@user.Id</td>
                <td>@user.LoginName</td>
                <td>@user.NickName</td>
                <td>@user.RealName</td>
                <td>@user.Sex</td>
                <td>@user.Age</td>
                <td>@user.BirthDay</td>
                <td>@user.UserStaus</td>
                <td>@user.MobilePhone</td>
                <td>@user.QQ</td>
                <td>@user.Weixin</td>
                <td>@user.Addr</td>
                <td>@user.OtherInfo</td>
                <td>@user.CreateTime</td>
                <td>
                    <a class="btn mini purple thickbox" title='编辑' href="@Url.Action("Edit", new { id = user.Id })?TB_iframe=true&height=350&width=400">
                        <i class="icon-edit"></i>
                        编辑
                    </a>
                </td>
            </tr>
        }


    </table>

}
<div class="dataTables_paginate paging_bootstrap pagination">
    @Html.Pager(Model, new PagerOptions() { AutoHide = true, ShowTotalItemCount = true })
</div>
