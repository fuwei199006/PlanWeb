
@{
    ViewBag.Title = "编辑";

    Layout = Url.Content("~/Views/Shared/_LayoutEdit.cshtml");
}
@using Framework.Web.Controls;
@using Plain.Dto
@using Plain.Model.Models.Model
@model  Plain.Model.Models.Model.Basic_Role
@section MainContent{

    <div class="page-container  row-fluid">
        @foreach (var group in (ViewData[WebKeys.RoleGroupDic] as Dictionary<string,string>).Keys)
        {
            <div class="portlet paddingless">
                <div class="portlet-title line">
                    <div class="caption captionMargin">
                        <i class="icon-bell"></i>
                        <span class="roleGroup">@ViewBag.Group[group]</span>
                    </div>
                    <div class="tools">

                        <a href="javascript:void(0);" class="collapse"></a>


                    </div>
                </div>

                <div class="portlet-body" style="display: block;">
                    <div class="controls">
                        @foreach (var item in ((List<Basic_Power>)ViewBag.Power).Where(r => r.PowerGroup == group.ToString()))
                        {
                            <label class="checkbox">
                                <input type="checkbox" class="checkboxes" name='PowerIds' value='@item.Id' @(Model.PowerIds.Contains(item.Id) ? "checked=true" : "") />@item.PoweName
                                @*@Html.CheckBox("RoleIds", Model.RoleIds.Contains(item.Id), new { value = item.Id,@class="checkboxes" })*@
                            </label>
                        }


                    </div>

                </div>

            </div>
        }
    </div>



}
