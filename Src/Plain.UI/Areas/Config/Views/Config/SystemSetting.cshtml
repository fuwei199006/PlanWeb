@{

    Layout = Url.Content("~/Views/Shared/_Layout.cshtml");
}
@model  Plain.Model.Models.Model.Basic_Config
@using Core.Config.ConfigModel;
@using Framework.Utility;
@using Core.Encrypt
@{
    var configBase = Model.ConfigBase as SystemSettingConfig;

}

<div class="row-fluid">
    <div class="span4">
        <a class="btn purple  thickbox" title='修改系统设置' href="@Url.Action("DbConfigEdit", new {key = CacheKey.DaoConfig})TB_iframe=true&height=280&width=600"><i class="icon-edit icon-white"></i> 修改</a>
    </div>
</div>
<br />
<div class="alert">
    <button class="close" data-dismiss="alert"></button>
    <strong>系统配置相关：</strong>
    下面是当前系统的配置
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>描述</th>
            <th>对应值</th>
            <th>使用说明</th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <td>系统标题</td>
            <td> @configBase.WebSiteTitle</td>
            <td></td>
        </tr>
        <tr>
            <td>系统描述</td>
            <td>@configBase.WebSiteDescription</td>
            <td></td>
        </tr>

        <tr>
            <td>SEO关键字</td>
            <td>@configBase.WebSiteKeyWords</td>
            <td></td>
        </tr>

        <tr>
            <td>数据日志监控</td>
            <td>@(configBase.IsDbMonitor ? "打开" : "关闭")</td>
            <td></td>
        </tr>

        <tr>
            <td>cookie过期时间(h)</td>
            <td>@configBase.CookieExpireTime</td>
            <td></td>
        </tr>
        <tr>
            <td>缓存过期时间(h)</td>
            <td>@configBase.CacheExpiteTime</td>
            <td></td>
        </tr>
        <tr>
            <td>CDN服务器</td>
            <td>@configBase.CdnDomain</td>
            <td></td>
        </tr>
        <tr>
            <td>文件服务器</td>
            <td>@configBase.FileDomain</td>
            <td></td>
        </tr>

        <tr>
            <td>系统标识</td>
            <td>@configBase.SystemId</td>
            <td></td>
        </tr>
    </tbody>

</table>
