@{

    Layout = Url.Content("~/Views/Shared/_Layout.cshtml");
}
@model Core.Config.ConfigModel.DaoConfig
@using Core.Encrypt

<div class="alert">
    <button class="close" data-dismiss="alert"></button>
    <strong>系统配置相关：</strong>
    下面是当前数据库的配置
</div>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>序号</th>
            <th>类别</th>
            <th>值</th>
            <th>是否可用</th>
            <th>创建时间</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
    <tr>
        <td>1</td>
        <td>日志数据库</td>
        <td>@DESEncrypt.Decode(Model.Log)</td>
        <td>是</td>
        <td>@Model.CreateTime.ToShortDateString()</td>
        <td>
            <a class="btn mini purple thickbox" title='编辑' href="@Url.Action("Edit", new {id = 1})?TB_iframe=true&height=350&width=400">
                <i class="icon-edit"></i>
                编辑
            </a>
        </td>

    </tr>

    <tr>
        <td>2</td>
        <td>业务数据库</td>
        <td>@DESEncrypt.Decode(Model.BussinessDaoConfig)</td>
        <td>是</td>
        <td>@Model.CreateTime.ToShortDateString()</td>
        <td>
            <a class="btn mini purple thickbox" title='编辑' href="@Url.Action("Edit", new {id = 1})?TB_iframe=true&height=350&width=400">
                <i class="icon-edit"></i>
                编辑
            </a>
        </td>

    </tr>
        <tr>
            <td>3</td>
            <td>基础数据库</td>
            <td>@DESEncrypt.Decode(Model.BaseDao)</td>
            <td>是</td>
            <td>@Model.CreateTime.ToShortDateString()</td>
            <td>
                <a class="btn mini purple thickbox" title='编辑' href="@Url.Action("Edit", new { id = 1 })?TB_iframe=true&height=350&width=400">
                    <i class="icon-edit"></i>
                    编辑
                </a>
            </td>

        </tr>
    </tbody>

</table>
