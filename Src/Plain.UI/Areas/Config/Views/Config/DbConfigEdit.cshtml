
@{
    Layout = Url.Content("~/Views/Shared/_LayoutEdit.cshtml");
}
@model   Core.Config.ConfigModel.DaoConfig
@using Core.Encrypt
@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>日志数据库</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.Log   , new { @class = "m-wrap large" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Log)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>业务数据库</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.BussinessDaoConfig, new { @class = "m-wrap large" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Log)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>基础数据库</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.BaseDao, new { @class = "m-wrap large",@readonly= "readonly" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Log)</span>
                </div>
            </div>
        </div>
    </div>
}
