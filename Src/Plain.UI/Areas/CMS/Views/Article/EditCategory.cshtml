@using Plain.Dto
@using Plain.Web
@{
    ViewBag.Title = "编辑";

    Layout = Url.Content("~/Views/Shared/_LayoutEdit.cshtml");
}
@model Plain.Model.Models.Model.Basic_Article
@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>标题</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.Title, new { @class = "m-wrap" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Title)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>副标题</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.SubTitle, new { @class = "m-wrap" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.SubTitle)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>作者</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.Author, new { @class = "m-wrap" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Author)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>文章类型</label>
                <div class="controls">
                    @Html.DropDownListFor(x => x.Category, ViewData[WebKeys.ArticleType] as IEnumerable<SelectListItem>, new { @class = "m-wrap " })
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>文章位置</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.Position,  new { @class = "m-wrap  " })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>文章来源</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.Source, new { @class = "m-wrap " })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.SourceUrl)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>源地址</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.SourceUrl, new { @class = "m-wrap  " })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.SourceUrl)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>关键字</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.KeyWord, new { @class = "m-wrap  " })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.KeyWord)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>排序</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.Sort, new { @class = "m-wrap  " })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Sort)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>状态</label>
                <div class="controls">
                    @Html.DropDownListFor(x => x.ArticleStatus, ViewData[WebKeys.ArticleStatu] as IEnumerable<SelectListItem>, new { @class = "m-wrap " })
                </div>
            </div>
  
        </div>
    </div>
}
