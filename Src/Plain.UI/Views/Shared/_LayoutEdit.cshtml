<script src='@Url.StaticFile("~/Scripts/jquery.blockui.js")'></script>
<script src='@Url.StaticFile("~/Scripts/jquery.cookie.js")'></script>
<script src='@Url.StaticFile("~/Scripts/excanvas.js")'></script>
<script src='@Url.StaticFile("~/Scripts/respond.js")'></script>
<script src='@Url.StaticFile("~/Content/plugins/uniform/jquery.uniform.min.js")'></script>
<script src='@Url.StaticFile("~/Content/plugins/data-tables/jquery.dataTables.js")'></script>
<script src='@Url.StaticFile("~/Content/plugins/data-tables/DT_bootstrap.js")'></script>
<script src='@Url.StaticFile("~/Scripts/jquery.pulsate.min.js")'></script>
<script src='@Url.StaticFile("~/Scripts/app.js")'></script>
<script src='@Url.StaticFile("~/Content/Thickbox/jquery.thickbox.js")'></script>
<script src='@Url.StaticFile("~/Content/plugins/jquery-ui/jquery-ui-1.10.1.custom.min.js")'></script>
