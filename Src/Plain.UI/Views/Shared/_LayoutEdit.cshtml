@using Framework.Web
@using Plain.Web
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">


    <link href='@Url.StaticFile("~/Content/bootstrap/css/bootstrap.min.css")' rel="stylesheet" />
    <link href='@Url.StaticFile("~/Content/Metric/metro.css")' rel="stylesheet" />
    <link href='@Url.StaticFile("~/Content/plugins/font-awesome/css/font-awesome.min.css")' rel="stylesheet" />

    <link href="~/Content/Metronic/media/css/style-metro.css" rel="stylesheet" />
    <link href="~/Content/Metronic/media/css/style.css" rel="stylesheet" />
    <link href='@Url.StaticFile("~/Content/metric/style.css")' rel="stylesheet" />

    <link href="~/Content/plugins/jquery-ui/jquery-ui-1.10.1.custom.min.css" rel="stylesheet" />
  
    <link href='@Url.StaticFile("~/Content/plugins/uniform/css/uniform.default.css")' rel="stylesheet" />

    @RenderSection("PageSpecificCssIncludes", required: false)
</head>
<body class="hold-transition skin-blue sidebar-mini">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "mainForm" }))
    {
        @RenderSection("MainContent", required: false)
        @RenderBody()
        <div style="height: 80px"></div>


        <div class="form-actions navbar-fixed-bottom">
            <button type="submit" id="submit" class="btn blue"><i class="icon-ok"></i> 提交</button>
            <span id="submitloading" style="display:none;"><img src='@Url.StaticFile("~/Content/Images/loading.gif")' /></span>
            <button type="button" class="btn" id="cancel">撤销</button>
            @Html.ValidationSummary(false)
        </div>
    }
    @RenderSection("OtherContent", required: false)
    <!-- BEGIN JAVASCRIPTS -->

</body>
</html>
<script src='@Url.StaticFile("~/Content/plugins/jQuery/jQuery-2.1.4.min.js")'></script>
<script src='@Url.StaticFile("~/Content/plugins/jQuery/jquery-migrate-1.2.1.min.js")'></script>
<script src='@Url.StaticFile("~/Content/plugins/breakpoints/breakpoints.js")'></script>
<script src='@Url.StaticFile("~/Content/bootstrap/js/bootstrap.js")'></script>
<script src='@Url.StaticFile("~/Scripts/jquery.cookie.js")'></script>
<script src='@Url.StaticFile("~/Content/plugins/uniform/jquery.uniform.min.js")'></script>
<script src='@Url.StaticFile("~/Content/plugins/jquery-ui/jquery-ui-1.10.1.custom.min.js")'></script>
<script src='@Url.StaticFile("~/Scripts/app.js")' type="text/javascript" charset="utf-8"></script>

<script src="~/Scripts/admin.edit.js"></script>
<script type="text/javascript">

    jQuery(document).ready(function () {

        App.init(); // initlayout and core plugins


    });

    //App.blockUI($("body"),"");
</script>


@RenderSection("PageSpecificJavascriptIncludes", required: false)