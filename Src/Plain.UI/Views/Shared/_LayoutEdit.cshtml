@using Framework.Extention
@using Plain.Web
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Plain/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link href="~/Content/AdminLTE/css/AdminLTE.min.css" rel="stylesheet" />

    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Plain/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link href="~/Content/AdminLTE/css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Content/AdminLTE/css/skins/_all-skins.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/iCheck/flat/blue.css" rel="stylesheet" />
    <link href="~/Content/plugins/morris/morris.css" rel="stylesheet" />
    <link href="~/Content/plugins/jvectormap/jquery-jvectormap-1.2.2.css" rel="stylesheet" />
    <link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />
    <link href="~/Content/plugins/daterangepicker/daterangepicker-bs3.css" rel="stylesheet" />
    <link href="~/Content/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" rel="stylesheet" />
    @*<link href="~/Content/Thickbox/jquery.thickbox.css" rel="stylesheet" />*@
    <style>
        .bottom {
            position: fixed;
            bottom: 0;
        }
    </style>
    @RenderSection("PageSpecificCssIncludes", required: false)
</head>
<body class="hold-transition skin-blue sidebar-mini">


    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "mainForm", @class = "form-horizontal" }))
    {

        <div class="box-body">
            @RenderSection("MainContent", required: false)
            @RenderBody()
        </div>
        <div class="box-footer bottom">
            <button type="submit" id="submit" class="btn  btn-default"><i class="fa fa-check"></i> 提交</button>
            <span id="submitloading" style="display: none;"><img src='@Url.StaticFile("/content/images/loading.gif")' /></span>
            <button type="button" class="btn  btn-danger" id="cancel">撤销</button>
            @Html.ValidationSummary(false)
        </div>
    }
    @RenderSection("OtherContent", required: false)

    <!-- BEGIN JAVASCRIPTS -->
    <script type="text/javascript">
        var staticFileRoot = "@Url.StaticFile()";
    </script>
</body>
</html>
