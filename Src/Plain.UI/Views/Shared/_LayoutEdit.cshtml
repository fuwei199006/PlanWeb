@using Framework.Extention
@using Plain.Web
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
 
 
   
    @RenderSection("PageSpecificCssIncludes", required: false)
</head>
<body class="hold-transition skin-blue sidebar-mini">


    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "mainForm", @class = "form-horizontal" }))
    {

        <div class="box-body">
            @RenderSection("MainContent", required: false)
            @RenderBody()
        </div>
        <div style="height: 80px"></div>
        <div class="box-footer bottom">
            <button type="submit" id="submit" class="btn  btn-primary"><i class="fa fa-check"></i> 提交</button>
            <span id="submitloading" style="display: none;"><img src='@Url.StaticFile("/content/images/loading.gif")' /></span>
            <button type="button" class="btn  btn-danger" id="cancel">撤销</button>
            @Html.ValidationSummary(false)
        </div>
    }
    @RenderSection("OtherContent", required: false)

    <!-- BEGIN JAVASCRIPTS -->
    <script type="text/javascript">
        var staticFileRoot = "@Url.StaticFile()";
    </script>
</body>
</html>
 @RenderSection("PageSpecificJavascriptIncludes", required: false)