@using Plain.Web
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@AdminCacheContext.Current.AdminWebSetting.SystemSettingConfig.WebSiteTitle</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta content="" name="description" />
    <meta content="" name="author" />

    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Metric/metro.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/css/bootstrap-responsive.css" rel="stylesheet" />
    <link href="~/Content/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/metric/style.css" rel="stylesheet" />
    <link href="~/Content/metric/style_responsive.css" rel="stylesheet" />
    <link href="~/Content/metric/style_default.css" rel="stylesheet" />
    <link href="~/Content/plugins/data-tables/DT_bootstrap.css" rel="stylesheet" />
    <link href="~/Content/plugins/fancybox/source/jquery.fancybox.css" rel="stylesheet" />
    <link href="~/Content/plugins/uniform/css/uniform.default.css" rel="stylesheet" />
    <link href="~/Content/plugins/jquery-ui/jquery-ui-1.10.1.custom.min.css" rel="stylesheet" />
    <link href="~/Content/Metric/admin.main.css" rel="stylesheet" />
    <link href="~/Content/Thickbox/jquery.thickbox.css" rel="stylesheet" />

    @RenderSection("PageSpecificCssIncludes", required: false)
</head>
<body class="fixed-top">
    <!-- BEGIN HEADER -->
    <div class="header navbar navbar-inverse navbar-fixed-top">
        <!-- BEGIN TOP NAVIGATION BAR -->
        @Html.Partial("_Header")
        <!-- END TOP NAVIGATION BAR -->
    </div>
    <!-- END HEADER -->
    <!-- BEGIN CONTAINER -->
    <div class="page-container row-fluid">
        <!-- BEGIN SIDEBAR -->
        @Html.Partial("_Menu")
        <!-- END SIDEBAR -->
        <!-- BEGIN PAGE -->
        <div class="page-content">
            <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
            <div id="portlet-config" class="modal hide">
                <div class="modal-header">
                    <button data-dismiss="modal" class="close" type="button"></button>
                    <h3>portlet Settings</h3>
                </div>
                <div class="modal-body">
                    <p>Here will be a configuration form</p>
                </div>
            </div>
            <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
            <!-- BEGIN PAGE CONTAINER-->
            <div class="container-fluid">
                <!-- BEGIN PAGE HEADER-->
                <div class="row-fluid">
                    <div class="span12" id="navigation">
                        <!-- BEGIN STYLE CUSTOMIZER -->
                        @Html.Partial("_Theme")
                        <!-- END BEGIN STYLE CUSTOMIZER -->
                        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
                        <h3 class="page-title">
                            <span>标题</span>　<small>介绍</small>
                        </h3>
                        <ul class="breadcrumb">
                            <li>
                                <i class="icon-home"></i>
                                <span>首页</span>
                                <i class="icon-angle-right"></i>
                            </li>
                            <li>
                                <span>菜单组</span>
                                <i class="icon-angle-right"></i>
                            </li>
                            <li><span>菜单</span></li>
                        </ul>
                        <!-- END PAGE TITLE & BREADCRUMB-->
                    </div>
                </div>
                <!-- END PAGE HEADER-->
                <!-- BEGIN PAGE CONTENT-->
                @RenderBody()
                <!-- END PAGE CONTENT-->
            </div>
            <!-- END PAGE CONTAINER-->
        </div>
        <!-- END PAGE -->
    </div>
    <!-- END CONTAINER -->
    <!-- BEGIN FOOTER -->
    @Html.Partial("_Footer")
    <!-- END FOOTER -->
</body>
</html>
<script src="~/Content/plugins/jQuery/jQuery-2.1.4.min.js"></script>
<script src="~/Content/plugins/jQuery/jquery-migrate-1.2.1.min.js"></script>
<script src="~/Content/plugins/breakpoints/breakpoints.js"></script>
<script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.blockui.js"></script>
<script src="~/Scripts/jquery.cookie.js"></script>
<script src="~/Scripts/excanvas.js"></script>
<script src="~/Scripts/respond.js"></script>
<script src="~/Content/plugins/uniform/jquery.uniform.min.js"></script>
<script src="~/Content/plugins/data-tables/jquery.dataTables.js"></script>
<script src="~/Content/plugins/data-tables/DT_bootstrap.js"></script>
<script src="~/Scripts/jquery.pulsate.min.js"></script>

<script src="~/Content/Thickbox/jquery.thickbox.js"></script>
<script src="~/Content/plugins/jquery-ui/jquery-ui-1.10.1.custom.min.js"></script>
<script src="~/Scripts/jquery.numeric.js"></script>
<script src="~/Scripts/jquery.ui.datapicker-zh-CN.js"></script>
<script src="~/Scripts/admin.main.js"></script>
<script src="~/Scripts/app.js"></script>
<script type="text/javascript">

    jQuery(document).ready(function () {

        App.init(); // initlayout and core plugins



    });


</script>
@RenderSection("PageSpecificJavascriptIncludes", required: false)